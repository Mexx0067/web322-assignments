<!DOCTYPE html>
<html lang="en" data-theme="dim">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects - Climate Solutions</title>
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
     <%- include('partials/navbar.ejs') %>
    <div class="container mx-auto p-4">
        <div class="hero bg-base-200 p-8 rounded-lg">
            <div class="hero-content text-center">
                <div>
                    <h1 class="text-4xl font-bold">Projects</h1>
                    <p class="py-6">Explore projects by sector</p>
                    
                    <% if (session.user) { %>
                    <a href="/solutions/addProject" class="btn btn-success mb-4">Add New Project</a>
                    <% } %>
                    
                    <div class="flex gap-2 justify-center">
                        <a href="/solutions/projects?sector=Land" class="btn btn-outline btn-sm">Land Sinks</a>
                        <a href="/solutions/projects?sector=Industry" class="btn btn-outline btn-sm">Industry</a>
                        <a href="/solutions/projects?sector=Transportation" class="btn btn-outline btn-sm">Transportation</a>
                        <a href="/solutions/projects?sector=Electricity" class="btn btn-outline btn-sm">Electricity</a>
                        <a href="/solutions/projects?sector=Food" class="btn btn-outline btn-sm">Food & Agriculture</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-8">
            <table class="table w-full">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Sector</th>
                        <th>Summary</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    <% projects.forEach(project => { %>
                        <tr>
                            <td><%= project.title %></td>
                            <td><a href="/solutions/projects?sector=<%= project.Sector.sector_name %>" class="btn btn-sm btn-primary"><%= project.Sector.sector_name %></a></td>
                            <td><%= project.summary_short %></td>
                            <td><a href="/solutions/projects/<%= project.id %>" class="btn btn-sm btn-primary">Details</a></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>